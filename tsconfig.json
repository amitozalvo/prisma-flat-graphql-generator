{
  "extends": "@tsconfig/node22/tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/graphql/generated"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}